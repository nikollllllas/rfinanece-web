generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String          @id @default(uuid())
  description String
  amount      Decimal         @db.Decimal(10, 2)
  date        DateTime
  notes       String?
  type        TransactionType
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  categoryId  String
  tag         TransactionTag?
  category    Category        @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
  @@index([date])
  @@map("transactions")
}

model Category {
  id           String        @id @default(uuid())
  name         String        @unique
  color        String        @default("#000000")
  icon         String?
  isDefault    Boolean       @default(false)
  type         CategoryType?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  budgets      Budget[]
  transactions Transaction[]

  @@map("categories")
}

model Budget {
  id          String   @id @default(uuid())
  amount      Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  String
  budgetMonth String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([categoryId, budgetMonth])
  @@index([categoryId])
  @@index([budgetMonth])
  @@map("budgets")
}

enum TransactionType {
  GANHO
  GASTO
}

enum TransactionTag {
  FALTA
  PAGO
  DEVOLVER
  ECONOMIA
}

enum CategoryType {
  GANHO
  GASTO
  AMBOS
}
